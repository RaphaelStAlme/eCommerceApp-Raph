<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Show', product %></td>
        <% if @user != nil %>
          <% if @user.seller %>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          <% if logged_in? && current_user.buyer %>
            <td><%= link_to 'Commander', product_new_order_path(product), class: "button" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>

<% if @user != nil %>
    <% if @user.seller %>
    <%= link_to 'New Product', new_product_path %>
    <% end %>
<% end %>

